generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String      @id @default(cuid())
  name          String
  price         Float
  stock         Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  category      String?
  description   String?
  expiryDate    DateTime?
  purchasePrice Float?
  unit          String?
  costPrice     Float?      // ADD THIS
  sku           String?     // ADD THIS
  isActive      Boolean?    @default(true) // ADD THIS
  minStockLevel Int?        @default(5)    // ADD THIS
  reorderPoint  Int?        @default(10)   // ADD THIS
  OrderItem     OrderItem[]
movements StockMovement[]
  @@map("products")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt // MAKE IT NULLABLE with ?
  altPhone  String?  // ADD THIS
  tags      String[] // ADD THIS
  addresses Json?    // ADD THIS
  orders    Order[]

  @@unique([phone, email])
  @@map("customers")
}

model Order {
  id               String      @id @default(cuid())
  customerId       String?
  total            Float
  createdAt        DateTime    @default(now())
  updatedAt        DateTime?   @updatedAt // MAKE IT NULLABLE with ?
  paymentMethod    String?     @default("cash")
  status           String?     @default("pending") // ADD THIS
  paymentReference String?     // ADD THIS
  cashierId        String?     // ADD THIS
  items            OrderItem[]
  customer         Customer?   @relation(fields: [customerId], references: [id], onDelete: Cascade)
   payments Payment[]
refunds  Refund[]
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  price     Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
  @@map("order_items")
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String
  oldValues Json?
  newValues Json?
  userId    String?
  userRole  String?
  timestamp DateTime @default(now())
  ipAddress String?

  @@map("audit_logs")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(STAFF)
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions Session[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
}
model StockMovement {
  id         String   @id @default(cuid())
  productId  String
  type       String   // "sale" | "restock" | "adjustment" | "refund"
  quantity   Int
  oldStock   Int
  newStock   Int
  reason     String?  // optional note like "Damaged goods" or "Manual correction"
  createdAt  DateTime @default(now())

  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@map("stock_movements")
}
model Payment {
  id        String   @id @default(cuid())
  orderId   String
  method    String   // "cash" | "upi" | "card" | "wallet"
  amount    Float
  reference String?
  createdAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@map("payments")
}
model Refund {
  id        String   @id @default(cuid())
  orderId   String
  amount    Float
  reason    String?
  createdAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("refunds")
}
model Session {
  id        String   @id @default(cuid())
  userId    String
  startTime DateTime @default(now())
  endTime   DateTime?
  totalSales Float?

  user      User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}
model Expense {
  id        String   @id @default(cuid())
  title     String
  amount    Float
  date      DateTime @default(now())
  category  String?
  notes     String?

  @@map("expenses")
}
